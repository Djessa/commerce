{% extends "base.html.twig" %}

{% block title %}
    Client | Sign in
{% endblock %}

{% block body %}
    <div class="row mt-5">
        <h3 class="m-3 text-center">Vous devez vous identifier avant de faire un achat</h3>
        <div class="col-md-6 mx-auto">
            <form method="post">
                <div class="form-group m-2 mb-3 mt-3">
                    <label for="inputEmail">Adresse email</label>
                    <input placeholder="Entrer votre adresse email" type="email" value="" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
                <div class="form-group m-2 mb-3">
                    <label for="inputPassword">Mot de passe</label>
                    <input placeholder="Entrer votre mot de passe" type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="mt-3 text-center">
                    <button class="btn  btn-primary btn-block" type="submit"> S'identifier</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}